@model CPRO2211_Assignment1.Models.TipCalculator

@{
    ViewData["Title"] = "Tip Calculator";
}

<h1>Tip Calculator</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cost of Meal:</label>
                <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fifteen" class="control-label">15:</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="Fifteen" class="form-control" readonly />
                </div>
                <span asp-validation-for="Fifteen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Twenty" class="control-label">20%:</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="Twenty" class="form-control" readonly />
                </div>
                <span asp-validation-for="Twenty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwentyFive" class="control-label">25%:</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="TwentyFive" class="form-control" readonly />
                </div>
                <span asp-validation-for="TwentyFive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
                <input type="submit" name="clearButton" value="Clear" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}